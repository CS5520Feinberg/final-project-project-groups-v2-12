<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/numOfMiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="0"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textMiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="mi"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/numOfMiles"
                app:layout_constraintStart_toEndOf="@+id/numOfMiles"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/runDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="0"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/numOfMiles"
                app:layout_constraintStart_toEndOf="@+id/textMiles"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/runMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="0"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/numOfMiles"
                app:layout_constraintStart_toEndOf="@+id/runDate"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="min"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/numOfMiles"
                app:layout_constraintStart_toEndOf="@+id/runMinutes"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/miPerMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="0"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/numOfMiles"
                app:layout_constraintStart_toEndOf="@+id/textMinutes"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textMilesPerMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="pace"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/numOfMiles"
                app:layout_constraintStart_toEndOf="@+id/miPerMin"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>